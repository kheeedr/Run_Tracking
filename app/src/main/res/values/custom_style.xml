<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Three_rounded_corners">
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">0%</item>
    </style>

    <style name="circular_shape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationViewText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/metropolis_medium</item>

    </style>

    <style name="BottomNavigationViewText.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/metropolis_semi_bold</item>
    </style>

    <style name="BottomNavigationView" parent="@style/Widget.Design.BottomNavigationView">
        <item name="elevation">@dimen/_10sdp</item>
        <item name="android:translationZ">@dimen/_15sdp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="colorControlHighlight">#6200EA</item>

        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>

        <item name="boxCornerRadiusBottomEnd">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusTopStart">7dp</item>

    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>